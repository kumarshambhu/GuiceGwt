<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.verticalCenter{
			align:center;

			}
			.actionBtn {
			 background-color: #ffffaa;
			}
	.contentPanel {
			
			
			border: 1px solid #BBBBBB;
			padding:2px 2px 2px 2px;
			margin:6px 2px 2px 2px;
			width: 400px;
			text-align: center;
		}
		.margin-right {
			margin-right: 100px;
			
		}		
		.gwt-TabLayoutPanel {
        vertical-align: middle;
        text-align: center;
        margin-left: auto;
        margin-right: auto;
        border-top: 10px solid #666;
        border-left: 10px solid #999;
        border-right: 10px solid #666;
        border-bottom: 10px solid #999;
        padding:20px 20px 20px 20px;

    }
	</ui:style>
	<g:HTMLPanel>
		
		
		<g:VerticalPanel styleName="{style.gwt-TabLayoutPanel}">
			<g:HorizontalPanel>
				<g:Label>Remote Procedure Call:</g:Label>
			</g:HorizontalPanel>
			
			<g:HorizontalPanel>
				<g:Label ui:field="serverReply"></g:Label>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Button ui:field="close" styleName="{style.actionBtn}"></g:Button>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 